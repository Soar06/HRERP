@page
@model HR.Web.Pages.IndexModel

<div class="container-fluid min-vh-100 d-flex flex-column position-relative">
    <!-- Video Background -->
    <video autoplay muted loop playsinline class="background-video">
        <source src="/video/star-guardian-2022.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <!-- Overlay for Readability -->
    <div class="video-overlay"></div>

    <!-- Header -->
    <header class="p-3 text-white">
        <h1>HR ERP</h1>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1 d-flex justify-content-center align-items-center">
        <div class="card shadow p-4 text-center" style="width: 100%; max-width: 400px;">
            <h2 class="mb-4">Welcome to HR ERP</h2>
            <p>Streamline employee management and automate HR processes.</p>
            <a asp-page="/Auth/Login" class="btn btn-primary w-100">Login</a>
        </div>
    </main>

    <!-- Footer -->
    <footer class="p-3 text-center text-white">
        <a href="/Contact" class="text-white mx-2">Contact</a>
        <a href="/About" class="text-white mx-2">About Us</a>
        <a href="https://github.com/yourusername" class="text-white mx-2">Profile</a>
    </footer>
</div>

<style>
    /* General Styles */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: transparent;
        margin: 0;
        overflow: hidden;
    }

    h1, h2 {
        color: #333;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: rgba(255, 255, 255, 0.75); /* Semi-transparent white for card */
    }

    /* Video Background */
    .background-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    /* Overlay for Readability */
    .video-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3);
        z-index: -1;
    }

    /* Header and Footer */
    header, footer {
        background: linear-gradient(90deg, rgba(106, 183, 245, 0.75), rgba(245, 169, 208, 0.75)) !important;
        position: relative;
    }

    /* Button */
    .btn-primary {
        background: linear-gradient(90deg, rgba(106, 183, 245, 0.75), rgba(245, 169, 208, 0.75));
        border: none;
        transition: background 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, rgba(106, 183, 245, 0.9), rgba(245, 169, 208, 0.9));
        }
</style>