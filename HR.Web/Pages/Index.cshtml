@page
@model HR.Web.Pages.IndexModel

<div class="container min-vh-100 d-flex flex-column" style="background: linear-gradient(to bottom, purple, red);">
    <!-- Header -->
    <header class="p-3">
        <h1 class="text-white">HR ERP</h1>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1 d-flex justify-content-center align-items-center">
        <div class="card shadow p-4 text-center" style="width: 100%; max-width: 400px;">
            <h2 class="mb-4">Welcome to HR ERP</h2>
            <p>Streamline employee management and automate HR processes.</p>
            <a asp-page="/Auth/Login" class="btn btn-primary w-100">Login</a>
        </div>
    </main>

    <!-- Footer -->
    <footer class="p-3 text-center">
        <a href="/Contact" class="text-white mx-2">Contact</a>
        <a href="/About" class="text-white mx-2">About Us</a>
        <a href="https://github.com/yourusername" class="text-white mx-2">Profile</a>
    </footer>
</div>