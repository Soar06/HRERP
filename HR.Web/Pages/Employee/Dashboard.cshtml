@page
@model HR.Web.Pages.Employee.DashboardModel

<div class="container-fluid vh-100 d-flex flex-column position-relative">
    <!-- Video Background -->
    <video autoplay muted loop playsinline class="background-video">
        <source src="/video/star-guardian-2022.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <!-- Overlay for Readability -->
    <div class="video-overlay"></div>

    <!-- Header -->
    <header class="p-3 text-white m-0">
        <h1 class="m-0">HR ERP - Employee Dashboard</h1>
    </header>

    <!-- Main Content with Sidebar -->
    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <nav class="bg-dark text-white p-3" style="width: 250px;">
            <h4 class="text-center mb-4">Employee Menu</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white sidebar-link" href="#update-info" onclick="showSection('update-info')">Update Information</a>
                </li>
                <li class="nav-item">
                    <hr class="border-light">
                    <a class="nav-link text-white sidebar-link" href="#current-projects" onclick="showSection('current-projects')">Current Projects</a>
                </li>
                <li class="nav-item">
                    <hr class="border-light">
                    <a class="nav-link text-white sidebar-link" href="#schedule" onclick="showSection('schedule')">View Schedule</a>
                </li>
                <li class="nav-item">
                    <hr class="border-light">
                    <a class="nav-link text-white sidebar-link" href="#manage-department" onclick="showSection('manage-department')">View Departments</a>
                </li>
                <li class="nav-item">
                    <hr class="border-light">
                    <form method="post" asp-page-handler="Logout">
                        <button type="submit" class="nav-link text-white btn btn-link sidebar-link w-100 text-start">Logout</button>
                    </form>
                </li>
            </ul>
        </nav>

        <!-- Main Content Area -->
        <main class="flex-grow-1 p-4">
            <div id="welcome-section" class="card shadow p-4">
                <h2 class="text-center mb-4">Welcome, @Model.UserEmail</h2>
                <p class="text-center">Select an option from the sidebar to get started.</p>
            </div>

            <div id="update-info" class="card shadow p-4 d-none">
                <h2 class="text-center mb-4">Update Information</h2>
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @Model.SuccessMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <form method="post" asp-page-handler="UpdateInfo">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="Email" class="form-control" value="@Model.UserEmail" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" id="name" name="Name" class="form-control" placeholder="Enter your name" required />
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="text" id="phone" name="PhoneNumber" class="form-control" placeholder="Enter your phone number" required />
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="number" id="age" name="Age" class="form-control" placeholder="Enter your age" required />
                    </div>
                    <div class="mb-3">
                        <label for="contractLink" class="form-label">Contract Link</label>
                        <input type="url" id="contractLink" name="ContractLink" class="form-control" placeholder="Enter contract link" required />
                    </div>
                    <div class="mb-3">
                        <label for="departmentId" class="form-label">Department</label>
                        <select id="departmentId" name="DepartmentId" class="form-select" required>
                            @foreach (var dept in Model.Departments)
                            {
                                <option value="@dept.Id">@dept.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="level" class="form-label">Level</label>
                        <select id="level" name="Level" class="form-select" required>
                            <option value="Fresher">Fresher</option>
                            <option value="Junior">Junior</option>
                            <option value="Mid-level">Mid-level</option>
                            <option value="Senior">Senior</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>

            <div id="current-projects" class="card shadow p-4 d-none">
                <h2 class="text-center mb-4">Current Projects</h2>
                <p>Projects you are currently assigned to.</p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>Start Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Project A</td>
                            <td>2025-01-01</td>
                            <td>In Progress</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div id="schedule" class="card shadow p-4 d-none">
                <h2 class="text-center mb-4">Your Schedule</h2>
                <p>Your upcoming schedule.</p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Task</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2025-04-15</td>
                            <td>Team Meeting</td>
                            <td>10:00 AM</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div id="manage-department" class="card shadow p-4 d-none">
                <h2 class="text-center mb-4">View Departments</h2>
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @Model.SuccessMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <h4>Available Departments</h4>
                <table class="table mb-4">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dept in Model.Departments)
                        {
                            <tr>
                                <td>@dept.Id</td>
                                <td>@dept.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h4>Request Department Change</h4>
                <form method="post" asp-page-handler="RequestDepartmentChange">
                    <div class="mb-3">
                        <label for="newDepartmentId" class="form-label">New Department</label>
                        <select id="newDepartmentId" name="NewDepartmentId" class="form-select" required>
                            @foreach (var dept in Model.Departments)
                            {
                                <option value="@dept.Id">@dept.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Request Change</button>
                </form>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="p-3 text-center text-white m-0">
        <a href="/Contact" class="text-white mx-2">Contact</a>
        <a href="/About" class="text-white mx-2">About Us</a>
        <a href="https://github.com/yourusername" class="text-white mx-2">Profile</a>
    </footer>
</div>

<style>
    /* General Styles */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: transparent;
        margin: 0;
        overflow: hidden;
    }

    h1, h2, h4 {
        color: #333;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: rgba(255, 255, 255, 0.75);
    }

    /* Video Background */
    .background-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    /* Overlay for Readability */
    .video-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3);
        z-index: -1;
    }

    /* Header and Footer */
    header {
        background: linear-gradient(90deg, rgba(106, 183, 245, 0.75), rgba(245, 169, 208, 0.75)) !important; /* Blue-to-pink gradient with transparency */
        position: relative; /* Ensure header/footer are above the video */
    }

    footer {
        background: linear-gradient(90deg, rgba(245, 169, 208, 0.75), rgba(106, 183, 245, 0.75)) !important; /* Blue-to-pink gradient with transparency */
        position: relative; /* Ensure header/footer are above the video */
    }

    /* Sidebar */
    .bg-dark {
        background: linear-gradient(180deg, rgba(106, 183, 245, 0.75), rgba(245, 169, 208, 0.75)) !important;
        height: 100%;
        position: relative;
    }

    .sidebar-link {
        padding: 10px 15px;
        border-radius: 5px;
        transition: background-color 0.3s, padding-left 0.3s;
        position: relative;
        color: #FFFFFF;
    }

        .sidebar-link:hover {
            background-color: rgba(255, 255, 255, 0.2);
            padding-left: 20px;
        }

        .sidebar-link.active {
            background-color: rgba(255, 255, 255, 0.3);
        }

            .sidebar-link.active::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 15px;
                right: 15px;
                height: 2px;
                background-color: #FFFFFF;
            }

    /* Separator Line */
    hr {
        border-color: rgba(255, 255, 255, 0.5);
        margin: 0.5rem 0;
    }

    /* Tables */
    .table {
        margin-bottom: 0;
    }

        .table th {
            background-color: rgba(255, 255, 255, 0.75);
            position: sticky;
            top: 0;
            z-index: 1;
        }

    .table-hover tbody tr:hover {
        background-color: rgba(255, 255, 255, 0.5);
    }

    /* Form Inputs */
    .form-control, .form-select {
        background-color: rgba(255, 255, 255, 0.75);
        border-color: #ced4da;
    }

    /* Buttons */
    .btn-primary {
        background: linear-gradient(90deg, rgba(106, 183, 245, 0.75), rgba(245, 169, 208, 0.75));
        border: none;
        transition: background 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, rgba(106, 183, 245, 0.9), rgba(245, 169, 208, 0.9));
        }

    /* Alerts */
    .alert-success {
        background: linear-gradient(90deg, rgba(106, 183, 245, 0.75), rgba(245, 169, 208, 0.75));
        color: #333;
    }

    .alert-danger {
        background: linear-gradient(90deg, rgba(245, 169, 208, 0.75), rgba(106, 183, 245, 0.75));
        color: #333;
    }

    /* Main Content Background */
    main {
        background-color: transparent !important;
    }
</style>

<script>
    let currentSection = 'welcome-section'; // Default section

    function showSection(sectionId) {
        // Hide all sections
        document.querySelectorAll('main > div').forEach(div => div.classList.add('d-none'));

        // Show the selected section
        document.getElementById(sectionId).classList.remove('d-none');

        // Update the active sidebar link
        document.querySelectorAll('.sidebar-link').forEach(link => {
            link.classList.remove('active');
            if (link.getAttribute('href') === `#${sectionId}`) {
                link.classList.add('active');
            }
        });

        // Update the current section
        currentSection = sectionId;
    }

    // Show the correct section on page load
    document.addEventListener('DOMContentLoaded', () => {
        if (currentSection) {
            showSection(currentSection);
        }
    });
</script>